<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.stuby_back.domain.user.UserMapper">
    <resultMap id="UserMap" type="org.example.stuby_back.domain.user.User">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="schoolId" column="school_id"/>
        <result property="schoolGrade" column="school_grade"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
        <result property="email" column="email"/>
        <result property="gender" column="gender"/>
        <result property="profileImgPath" column="profile_img_path"/>
        <result property="provider" column="provider"/>
        <result property="providerId" column="provider_id"/>
        <result property="isOauthOnly" column="is_oauth_only"/>
        <result property="signupCompleted" column="signup_completed"/>
        <result property="emailVerified" column="email_verified"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
        insert into user_tb
        values (default, #{username}, #{password}, #{schoolId}, #{schoolGrade}, #{name}, #{age}, #{email}, #{gender},
        #{profileImgPath}, #{provider}, #{providerId}, #{isOauthOnly}, #{signupCompleted}, #{emailVerified}, now(), now())
    </insert>

    <update id="updateForOauthCompletion" parameterType="org.example.stuby_back.domain.user.User">
        update user_tb
        set
            username = #{username},
            name = #{name},
            age = #{age},
            gender = #{gender},
            school_id = #{schoolId},
            school_grade = #{schoolGrade},
            signup_completed = 1,
            updated_at = now()
        where
            user_id = #{userId}
    </update>

    <update id="update">
        update user_tb
        set
            school_id = #{schoolId},
            school_grade = #{schoolGrade},
            age = #{age},
            updated_at = now()
        where
            user_id = #{userId}
    </update>

    <select id="findByUsername" resultMap="UserMap">
        select
            *
        from
            user_tb
        where
            username = #{username}
    </select>

    <select id="findByEmail" resultMap="UserMap">
        select * from user_tb where email = #{email} limit 1
    </select>

    <select id="findByUserId" resultMap="UserMap">
        select * from user_tb where user_id = #{userId} limit 1
    </select>

    <select id="findByProviderId" resultMap="UserMap">
        select * from user_tb where provider_id = #{providerId} and provider = #{provider} limit 1
    </select>


</mapper>